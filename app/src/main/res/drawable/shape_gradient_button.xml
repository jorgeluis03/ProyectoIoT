<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/boton_azul_login_pulsado"
                android:endColor="@color/boton_morado_login_pulsado"/>
            <corners
                android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/azul_login"
                android:endColor="@color/morado_login"/>
            <corners
                android:radius="30dp"/>
        </shape>
    </item>
</selector>