<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Proyecto_IoT" parent="Theme.Material3.DayNight.NoActionBar">


        <item name="colorPrimary">@color/verde_bat</item>
        <item name="android:toolbarStyle">@style/Widget.AppCompat.Toolbar</item>

    </style>
    <style name="ShapeAppearanceOverlay.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% para que sea completamente circular -->
    </style>
    <style name="Theme.Proyecto_IoT" parent="Base.Theme.Proyecto_IoT" />
    <!-- Login color -->
    <style name="Login" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/verde_bat</item>
        <item name="colorOnSurface">@color/letra_clara</item>
        <item name="android:statusBarColor">@color/azul_background</item>
        <item name="android:toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="Alumno" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">#0A0E19</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="colorPrimary">#0A0E19</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:statusBarColor">@color/azul_background</item>

    </style>

    <style name="AlumnoNotificacionRV" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="colorPrimary">#0A0E19</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- Puedes ajustar otros atributos de estilo de texto aquÃ­ si es necesario -->
    </style>

</resources>