<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/nombreDontante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre donante"
            android:textSize="16sp"/>
        <TextView
            android:layout_below="@+id/nombreDontante"
            android:id="@+id/horaDonacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora 00 : 00 : 00"
            android:textColor="@color/grey"/>
        <TextView
            android:id="@+id/montoDonacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 200.00"
            android:layout_below="@+id/horaDonacion"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/online_green"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/btnAceptarDonacion"
                android:layout_width="40dp"
                android:layout_height="40sp"
                app:srcCompat="@drawable/round_check_box_24"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageButton
                android:id="@+id/btnRechazarDonacion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>