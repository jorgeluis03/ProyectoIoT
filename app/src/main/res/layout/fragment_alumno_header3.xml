<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/azul_background"
    tools:context=".alumno.Fragments.AlumnoHeader3Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textHeader3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBack3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/buttonBack3"
        app:layout_constraintTop_toTopOf="@+id/buttonBack3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textInfoChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/evento_chat_vivo"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textHeader3"
        app:layout_constraintTop_toBottomOf="@+id/textHeader3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonBack3"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:icon="@drawable/icon_back1"
        app:iconSize="22dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageChatEnabledState"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circular_bg"
        android:backgroundTint="@color/online_green"
        app:layout_constraintBottom_toBottomOf="@+id/textInfoChat"
        app:layout_constraintStart_toEndOf="@+id/textInfoChat"
        app:layout_constraintTop_toTopOf="@+id/textInfoChat" />

</androidx.constraintlayout.widget.ConstraintLayout>