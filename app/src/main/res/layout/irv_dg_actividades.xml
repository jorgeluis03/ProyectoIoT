<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/img_default_user" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textViewNombreActividad_dg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre actividad"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />
        <TextView
            android:id="@+id/textViewNumeroTelefono_dg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre actividad"
            android:textSize="14dp"
            android:textColor="#797D7F"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />
        <Button
            android:id="@+id/buttomAddDelegado_dg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0A0E19"
            android:text="Asigar delegado"
            android:textColor="#4ECF9C" />

    </LinearLayout>


</LinearLayout>