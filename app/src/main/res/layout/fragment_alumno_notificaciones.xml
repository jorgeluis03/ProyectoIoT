<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E19"
    tools:context=".alumno.Fragments.AlumnoNotificacionesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentNotificacionesHeader" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentNotificacionesHeader"
        android:name="com.example.proyecto_iot.alumno.Fragments.AlumnoHeader2Fragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout="@layout/fragment_alumno_header2"/>
</androidx.constraintlayout.widget.ConstraintLayout>